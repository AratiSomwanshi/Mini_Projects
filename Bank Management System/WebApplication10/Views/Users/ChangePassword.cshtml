@{
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label for="currentPassword">Current Password</label>
        <input type="password" id="currentPassword" name="currentPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Change Password" class="btn btn-primary" />
    </div>
</form>
<style>
    body {
        background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ0leO2uccocbNLmlGje86OFP7dUhn0TNB8Vg&s'); /* Replace with your image URL */
        background-size: cover; /* Cover ensures the entire background is covered */
        background-repeat: no-repeat; /* Prevents background from repeating */
        height: 100%; /* Ensures full height coverage */
        margin: 0; /* Removes default margin */
        font-family: Arial, sans-serif; /* Set your desired font */
    }
     

    

     /* Container for the change password form */
     .change-password-container {
         background-color: #fff; /* White background */
         box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
         padding: 20px;
         margin-bottom: 20px;
         max-width: 400px; /* Limit width of the form */
         margin: 0 auto; /* Center align horizontally */
     }

     /* Title style */
     h2 {
         margin-bottom: 20px; /* Space below the title */
     }

     /* Form group styles */
     .form-group {
         margin-bottom: 20px; /* Space between form groups */
     }

     /* Label style */
     label {
         font-weight: bold; /* Bold labels */
     }

     /* Input field style */
     .form-control {
         width: 100%; /* Full width input */
         padding: 10px; /* Padding inside input */
         font-size: 14px; /* Font size */
     }

     /* Submit button style */
     .btn-primary {
         background-color: #007bff; /* Blue primary button */
         color: #fff; /* White text */
         border: none; /* No border */
         padding: 10px 20px; /* Padding */
         cursor: pointer; /* Pointer cursor */
     }

         .btn-primary:hover {
             background-color: #0056b3; /* Darker blue on hover */
         }

     }

</style>