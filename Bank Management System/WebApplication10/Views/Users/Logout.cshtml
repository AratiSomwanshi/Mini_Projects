@{
    ViewData["Title"] = "Logout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>

                    <h3 class="text-center">Are you sure you want to log out?</h3>

                    <form asp-action="Logout" method="post" class="text-center mt-3">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript or jQuery scripts if needed
    </script>
}
