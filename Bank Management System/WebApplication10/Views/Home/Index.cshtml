@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ0leO2uccocbNLmlGje86OFP7dUhn0TNB8Vg&s');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh; /* Use viewport height for full screen coverage */
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 12px; /* Increased border radius for smoother corners */
            padding: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: box-shadow 0.3s ease;
            background-color: #fff; /* White background for cards */
        }

            .card:hover {
                box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3); /* Enhanced shadow on hover */
            }

        .card-img-top {
            max-width: 100%;
            height: 200px; /* Set a fixed height for all images */
            object-fit: cover; /* Ensure images cover the space without stretching */
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .card-body {
            padding: 15px; /* Add padding to the card body */
        }

        .card-title {
            font-size: 1.25rem; /* Adjust title font size */
            margin-bottom: 0.75rem; /* Add margin below title */
            color: #333; /* Darker color for title */
        }

        .card-description {
            color: #666; /* Slightly lighter color for description */
        }

        .row-cols-md-2 .col {
            flex: 0 0 50%;
            max-width: 50%;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <div class="card">
                    <img src="https://images.moneycontrol.com/static-mcnews/2021/06/Bank-representational-shutterstock-770x433.jpg" class="card-img-top" alt="Bank Image 1">
                    <div class="card-body">
                        <h5 class="card-title">Account Management</h5>
                        <p class="card-description">Manage customer accounts efficiently with our intuitive tools.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR-TTY1d5wzA4CqbeNvU0QrG6jtDkmPHou0sA&s" class="card-img-top" alt="Bank Image 2">
                    <div class="card-body">
                        <h5 class="card-title">Transaction Monitoring</h5>
                        <p class="card-description">Monitor transactions in real-time to ensure security and compliance.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS54poQd1eBTVc8fT8F26YNG24OZVLZTiPZfw&s" class="card-img-top" alt="Bank Image 3">
                    <div class="card-body">
                        <h5 class="card-title">Customer Support</h5>
                        <p class="card-description">24/7 customer support to assist clients with their banking needs.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ5nyf--PpW__UFRkbMd4VhyNimfLFPtBbLBQ&s" class="card-img-top" alt="Bank Image 4">
                    <div class="card-body">
                        <h5 class="card-title">Financial Planning</h5>
                        <p class="card-description">Offer personalized financial planning services to optimize savings and investments.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
